<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />

    <package name="default" namespace="/" extends="struts-default">
        
        <action name="login" class="servlet.LoginAction" method="judgeLogin">
        	<result type="chain" name="success">showrisk</result>
        	<result name="fail">/failure.jsp</result>
        	<result name="not found">/failure.jsp</result>
        	<result name="wrong">/failure.jsp</result>
        </action>
        
        <action name="register" class="servlet.UserAddAction" method="addUser">
        	<result type="chain" name="success">showrisk</result>
        	<result name="fail">/failure.jsp</result>
        	<result name="already exist">/failure.jsp</result>
        	<result name="too short">/failure.jsp</result>
        </action>
        
        <action name="showrisk" class="servlet.RiskAction" method="getAllRisk">
        	<result name="success">/risk.jsp</result>
        </action>
        
        <action name="addrisk" class="servlet.RiskAction" method="addRisk">
        	<result type="chain" name="success">showrisk</result>
        </action>
        
        <action name="riskfollow" class="servlet.RiskFollowAction" method="getRiskFollow">
        	<result name="success">/riskTracer.jsp</result>
        	<result type="chain" name="fail">showrisk</result>
        </action>
        
        <action name="riskfollowmodify" class="servlet.RiskFollowAction" method="modifyRiskFollow">
        	<result type="chain" name="success">showrisk</result>
        	<result type="chain" name="fail">riskfollow</result>
        </action>
        
    </package>

    <!-- Add packages here -->

</struts>
